<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="412dp"
            android:layout_height="403dp"
            app:srcCompat="@drawable/big_shadowed_box"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto"
        android:text="Confirmation"
        android:textColor="#D2000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="I want my donation to be"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:textSize="16sp"
            android:textColor="@color/ourBlack"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="28dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="40dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="42dp" />

    <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/appCompatSpinner"
            android:layout_width="143dp"
            android:layout_height="25dp"
            android:layout_marginTop="24dp"
            android:entries="@array/donate_options"
            android:spinnerMode="dropdown"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3"></android.support.v7.widget.AppCompatSpinner>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="at"
        app:layout_constraintBottom_toBottomOf="@+id/appCompatSpinner"
        app:layout_constraintStart_toEndOf="@+id/appCompatSpinner"
        app:layout_constraintTop_toTopOf="@+id/appCompatSpinner" />

    <ImageView
            android:id="@+id/imageView4"
            android:layout_width="53dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/rect_box_outline"
            app:layout_constraintStart_toStartOf="@+id/textView28"
            app:layout_constraintBottom_toBottomOf="@+id/imageView8"/>

    <ImageView
            android:id="@+id/imageView8"
            android:layout_width="53dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/rect_box_outline"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/appCompatSpinner"/>
    <ImageView
            android:id="@+id/imageView5"
            android:layout_width="54dp"
            android:layout_height="51dp"
            app:srcCompat="@drawable/rect_box_outline"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintBottom_toBottomOf="@+id/imageView7"/>

    <ImageView
            android:id="@+id/imageView7"
            android:layout_width="36dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/rect_box_outline"
            app:layout_constraintStart_toStartOf="@+id/textView29"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"/>

    <RadioGroup
            android:id="@+id/ampm_radio_group"
            android:layout_width="22dp"
            android:layout_height="51dp"
            android:checkedButton="@id/radioButton"
            app:layout_constraintEnd_toEndOf="@+id/button5"
            app:layout_constraintStart_toEndOf="@+id/imageView5" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5" app:layout_constraintTop_toTopOf="@+id/imageView5">

        <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:text="AM"
                android:textColor="@color/mediumGray"
                android:textSize="12sp"/>

        <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:text="PM"
                android:textColor="@color/ourBlack"
                android:textSize="12sp"/>
    </RadioGroup>

    <Button
            android:id="@+id/button5"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="#00FFFFFF"
            android:fontFamily="@font/roboto"
            android:text="Confirm"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/guideline5"
            app:layout_constraintEnd_toStartOf="@+id/guideline4" android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"/>

    <Button
            android:id="@+id/button6"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="12dp"
            android:background="#00FFFFFF"
            android:fontFamily="@font/roboto"
            android:text="Back"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/guideline5"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            app:layout_constraintStart_toStartOf="@+id/guideline3" app:layout_constraintHorizontal_bias="0.075"/>

    <android.support.constraint.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9"/>
    <TextView
            android:text=":"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView27" android:textStyle="bold"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/imageView7" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView5" android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/imageView7"
            app:layout_constraintHorizontal_bias="0.022"/>
    <TextView
            android:text="Min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/textView29" app:layout_constraintStart_toEndOf="@+id/textView29"
            android:layout_marginLeft="28dp" android:layout_marginStart="28dp"/>
    <TextView
            android:text="Hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView29"
            app:layout_constraintStart_toEndOf="@+id/textView28"
            android:layout_marginLeft="52dp" android:layout_marginStart="52dp"
            app:layout_constraintTop_toTopOf="@+id/textView28"/>
    <TextView
            android:text="Day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView28"
            app:layout_constraintTop_toTopOf="@+id/textView7" app:layout_constraintStart_toEndOf="@+id/textView7"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"/>
    <TextView
            android:text="Month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/appCompatSpinner"
            app:layout_constraintStart_toStartOf="@+id/appCompatSpinner"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/imageView8"
            app:layout_constraintVertical_bias="0.772"/>
    <EditText
            android:layout_width="52dp"
            android:layout_height="35dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText3"
            app:layout_constraintBottom_toBottomOf="@+id/imageView8"
            app:layout_constraintStart_toStartOf="@+id/imageView8"
            app:layout_constraintEnd_toEndOf="@+id/imageView8" app:layout_constraintTop_toTopOf="@+id/imageView8"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.769"/>
    <EditText
            android:layout_width="52dp"
            android:layout_height="34dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText2"
            app:layout_constraintStart_toStartOf="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.769"/>
    <EditText
            android:layout_width="31dp"
            android:layout_height="37dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText5"
            app:layout_constraintTop_toTopOf="@+id/imageView7"
            app:layout_constraintBottom_toBottomOf="@+id/imageView7"
            app:layout_constraintStart_toStartOf="@+id/imageView7"
            app:layout_constraintEnd_toEndOf="@+id/imageView7" app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintVertical_bias="0.692"/>

</android.support.constraint.ConstraintLayout>