<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Login">

    <include
        android:id="@+id/toolbar"
        layout="@layout/main_toolbar"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="5dp" />

    <Button
        android:id="@+id/donation_history"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="382dp"
        android:layout_height="211dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/button_smaller"
        app:layout_constraintBottom_toTopOf="@+id/view_donations"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <Button
        android:id="@+id/view_donations"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="376dp"
        android:layout_height="192dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/button_smaller"
        app:layout_constraintBottom_toTopOf="@+id/donor_responses2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donation_history" />

    <Button
        android:id="@+id/donor_responses2"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="376dp"
        android:layout_height="192dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/button_smaller"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_donations" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Donation"
        android:textColor="#464646"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:fontFamily="Roboto"
        app:layout_constraintBottom_toBottomOf="@+id/donation_history"
        app:layout_constraintEnd_toEndOf="@+id/donation_history"
        app:layout_constraintStart_toStartOf="@+id/donation_history"
        app:layout_constraintTop_toTopOf="@+id/donation_history"
        app:layout_constraintVertical_bias="0.817" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pantry Response"
        android:textColor="#464646"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:fontFamily="Roboto"
        app:layout_constraintBottom_toBottomOf="@+id/view_donations"
        app:layout_constraintEnd_toEndOf="@+id/view_donations"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/view_donations"
        app:layout_constraintTop_toTopOf="@+id/view_donations"
        app:layout_constraintVertical_bias="0.812" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donation History"
        android:textColor="#464646"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:fontFamily="Roboto"
        app:layout_constraintBottom_toBottomOf="@+id/donor_responses2"
        app:layout_constraintEnd_toEndOf="@+id/donor_responses2"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/donor_responses2"
        app:layout_constraintTop_toTopOf="@+id/donor_responses2"
        app:layout_constraintVertical_bias="0.812" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="@+id/donation_history"
        app:layout_constraintEnd_toEndOf="@+id/donation_history"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@+id/donation_history"
        app:layout_constraintTop_toTopOf="@+id/donation_history"
        app:layout_constraintVertical_bias="0.485"
        app:srcCompat="@drawable/camera_icon" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="45dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="@+id/view_donations"
        app:layout_constraintEnd_toEndOf="@+id/view_donations"
        app:layout_constraintStart_toStartOf="@+id/view_donations"
        app:layout_constraintTop_toTopOf="@+id/view_donations"
        app:srcCompat="@drawable/bell_icon" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="54dp"
        android:layout_height="51dp"
        app:srcCompat="@drawable/clock_icon"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="590dp" />


</android.support.constraint.ConstraintLayout>