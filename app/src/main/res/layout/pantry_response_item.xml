<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/food_item"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/donor_image"
            app:srcCompat="@drawable/thin_long_shadowed_box" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0"/>

    <ImageView
            android:id="@+id/donor_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rect_box"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/image_placeholder" />

    <TextView
            android:id="@+id/donor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/roboto"
            android:text="Donor Name"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/donor_image"
            app:layout_constraintTop_toTopOf="@+id/donor_image"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="23dp"
            android:layout_height="51dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/donor_name" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/background" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/donor_name"
            android:id="@+id/linearLayout5">
        <ImageView
                android:layout_width="13dp"
                android:layout_height="17dp" app:srcCompat="@drawable/phone" android:id="@+id/imageView3"/>
        <ImageView
                android:layout_width="12dp"
                android:layout_height="16dp" app:srcCompat="@drawable/location" android:id="@+id/imageView6"/>
        <ImageView
                android:layout_width="13dp"
                android:layout_height="18dp" app:srcCompat="@drawable/clock" android:id="@+id/imageView9"/>

    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="185dp"
            android:layout_height="51dp"
            app:layout_constraintStart_toEndOf="@+id/linearLayout5" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/linearLayout5"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout5">
        <TextView
                android:text="(888)-888-8888"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/phone_number_text" android:textSize="12sp"/>
        <TextView
                android:text="1453 University Ave, Berkeley, CA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/address_text" android:textSize="12sp"/>
        <TextView
                android:text="12/04/2019 5:00PM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/comment_text" android:textSize="12sp"/>
    </LinearLayout>

    <TextView
            android:text="confirmed"
            android:layout_width="80dp"
            android:layout_height="19dp"
            android:id="@+id/confirmed_text" app:layout_constraintStart_toEndOf="@+id/donor_name"
            android:layout_marginLeft="60dp" android:layout_marginStart="60dp"
            app:layout_constraintTop_toTopOf="@+id/donor_name"
            android:background="@color/ourGreen" android:gravity="center_horizontal"/>

</android.support.constraint.ConstraintLayout>